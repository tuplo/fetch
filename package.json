{
  "name": "@tuplo/fetch",
  "description": "HTTP request library (ESM/CJS)",
  "version": "0.0.0-development",
  "repository": "git@github.com:tuplo/fetch.git",
  "author": "Rui Costa",
  "license": "MIT",
  "keywords": [
    "http",
    "https",
    "fetch"
  ],
  "files": [
    "dist/index.mjs",
    "dist/index.cjs",
    "dist/index.d.ts",
    "dist/fetch.d.ts"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "@types/jest": "27.0.2",
    "@types/node": "16.10.3",
    "@typescript-eslint/eslint-plugin": "5.0.0",
    "@typescript-eslint/parser": "5.0.0",
    "esbuild": "0.13.4",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-airbnb-typescript": "14.0.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.1",
    "eslint-plugin-jest": "25.0.5",
    "jest": "27.2.5",
    "msw": "0.35.0",
    "nyc": "15.1.0",
    "prettier": "2.4.1",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.5",
    "typescript": "4.4.3"
  },
  "scripts": {
    "build": "bash sh/build.sh",
    "dev": "bash sh/dev.sh",
    "lint:ts": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test:ci:coverage": "bash sh/coverage.sh",
    "test:ci": "jest --ci",
    "test": "jest --watch"
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "setupFilesAfterEnv": [
      "./jest.setup.ts"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "airbnb-typescript/base",
      "prettier",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/typescript",
      "plugin:jest/all"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 9,
      "project": "./tsconfig.json"
    },
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "jest/prefer-expect-assertions": "off",
      "import/no-extraneous-dependencies": "off",
      "import/prefer-default-export": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.ts"
        ],
        "rules": {
          "no-undef": "off"
        }
      }
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 80
  }
}
